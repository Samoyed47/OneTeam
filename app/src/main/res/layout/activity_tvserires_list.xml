<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TVSeriresList">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/img" />

    <ImageView
        android:id="@+id/imageView_right"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="11dp"
        android:onClick="onClick"
        app:srcCompat="@drawable/right_errows" />

    <ImageView
        android:id="@+id/imageView_left"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/imageView_right"
        android:layout_alignBottom="@+id/imageView_right"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:onClick="onClick"
        app:srcCompat="@drawable/left_errow2" />

    <RelativeLayout
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <TextView
            android:id="@+id/textView_left"
            android:layout_width="211dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/textView_right"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:onClick="onClick"
            android:text="本周榜 | 更新于8月13日 12:00" />

        <TextView
            android:id="@+id/textView_right"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/textView_left"
            android:onClick="onClick"
            android:text="榜单规则"
            android:textColor="@color/red" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/TVList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:layout_alignParentStart="true"
        android:onClick="onClick">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>