<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/TVImage"
            android:layout_width="90dp"
            android:layout_height="130dp"

            android:layout_marginStart="28dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@android:drawable/ic_popup_sync" />

        <TextView
            android:id="@+id/TVName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="幸福到万家"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/TVImage"
            app:layout_constraintTop_toTopOf="@+id/TVImage" />

        <TextView
            android:id="@+id/TVStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赵丽颖/刘威"
            app:layout_constraintTop_toBottomOf="@+id/TVName"
            app:layout_constraintLeft_toLeftOf="@id/TVName"
            android:layout_marginTop="12dp">

        </TextView>

        <TextView
            android:id="@+id/TVSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40集"
            app:layout_constraintTop_toBottomOf="@+id/TVStar"
            app:layout_constraintLeft_toLeftOf="@id/TVStar"
            android:layout_marginTop="8dp">

        </TextView>

        <TextView
            android:id="@+id/TVBroadcast_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022-6-19 播出"
            app:layout_constraintTop_toBottomOf="@+id/TVSum"
            app:layout_constraintLeft_toLeftOf="@id/TVSum"
            android:layout_marginTop="8dp">

        </TextView>

        <TextView
            android:id="@+id/TVHeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="4433.2 万"
            android:layout_marginRight="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/TVBroadcast_time"
            app:layout_constraintTop_toBottomOf="@+id/TVSum">

        </TextView>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/huomiao"
        app:layout_constraintBottom_toBottomOf="@id/TVHeat"
        app:layout_constraintRight_toLeftOf="@id/TVHeat"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>